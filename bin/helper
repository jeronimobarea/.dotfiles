#!/usr/bin/env bash

set -ex

create_spaces() {
  SPACES=$(yabai -m query --spaces | jq -r '.[]."index"' | tail -n 1)

  if [[ $SPACES -lt 7 ]]; then
    NUM_SPACES_TO_CREATE=$(echo 7 - $SPACES| bc)

    for i in `seq 1 $NUM_SPACES_TO_CREATE`; do
      yabai -m space --create
    done

  fi
}

create_spaces

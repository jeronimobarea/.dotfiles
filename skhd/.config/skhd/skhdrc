# open terminal
cmd + alt - t : open -n -a Alacritty
# open browser
cmd + alt - f : open -n -a Firefox
# balance size of windows
cmd + alt - b : yabai -m space --balance

# focus window
cmd + alt - h : yabai -m window --focus west
cmd + alt - j : yabai -m window --focus south
cmd + alt - k : yabai -m window --focus north
cmd + alt - l : yabai -m window --focus east

# swap managed window
cmd + alt + shift - w : yabai -m window --swap north
cmd + alt + shift - a : yabai -m window --swap west
cmd + alt + shift - s : yabai -m window --swap south
cmd + alt + shift - d : yabai -m window --swap east

# move managed window
ctrl + alt - w : yabai -m window --warp north
ctrl + alt - a : yabai -m window --warp west
ctrl + alt - s : yabai -m window --warp south
ctrl + alt - d : yabai -m window --warp east

# move managed window
ctrl + alt + shift - w : yabai -m window --warp north
ctrl + alt + shift - a : yabai -m window --warp west
ctrl + alt + shift - s : yabai -m window --warp south
ctrl + alt + shift - d : yabai -m window --warp east

# focus monitor
ctrl + alt + cmd - p : yabai -m display --focus recent

# send window to monitor and follow focus
ctrl + alt + cmd + shift - p : yabai -m window --display recent; yabai -m display --focus recent

# resize windows
ctrl + alt - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
ctrl + alt - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
ctrl + alt - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
ctrl + alt - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:55:0
# Restart Yabai
ctrl + alt + shift - r : brew services restart yabai

# Spaces
cmd + alt - 1 : yabai -m space --focus 1
cmd + alt - 2 : yabai -m space --focus 2
cmd + alt - 3 : yabai -m space --focus 3
cmd + alt - 4 : yabai -m space --focus 4
cmd + alt - 5 : yabai -m space --focus 5
cmd + alt - 6 : yabai -m space --focus 6
cmd + alt - 7 : yabai -m space --focus 7
